<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Property Type Views -->

    <record id="view_property_type_tree" model="ir.ui.view">
        <field name="name">real.estate.property.type.list</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_property_type_form" model="ir.ui.view">
        <field name="name">real.estate.property.type.form</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Property Views -->
    <record id="view_property_list" model="ir.ui.view">
        <field name="name">real.estate.property.list</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="price"/>
                <field name="size"/>
                <field name="state"/>
                <field name="available_from"/>
                <field name="furnished"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_property_form" model="ir.ui.view">
        <field name="name">real.estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_type_id"/>
                        <field name="price"/>
                        <field name="size"/>
                        <field name="state"/>
                        <field name="available_from"/>
                        <field name="furnished"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">real.estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">list,form</field>
    </record>
    

</odoo>
